<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.favn.firstaid.Activites.QAActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="top"
            android:id="@+id/llInfor">

            <TextView
                android:text="Trường hợp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_injury"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spin_injury"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:entries="@array/injury_arrays" />

            <TextView
                android:text="Tên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Name"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:id="@+id/et_Name"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Email"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/cast_expanded_controller_background_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/et_Email"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:text="Nội dung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Content"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:layout_marginTop="0dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:id="@+id/et_Content"
                android:gravity="top"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/Widget.AppCompat.EditText"
                android:layout_weight="1.26"
                android:lines="4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llButton"
            android:gravity="center">

            <Button
                android:text="Gửi"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_Send"
                android:background="@color/colorPrimary"
                android:textSize="18sp"
                android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
                android:theme="@style/PrimaryButton"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
